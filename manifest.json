{
  "manifest_version": 3,
  "name": "TrueCount for LinkedIn",
  "version": "1.0",
  "description": "Reveal the exact number of applicants on LinkedIn job posts.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ]
}